<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".PosyanduFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gambar_posyandu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/title_foto_posyandu"
                android:cropToPadding="false"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/kantor_kelurahan_kemang_manis__kec_ilir_barat_ii__kota_palembang" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/gambar_posyandu">


                <TextView
                    android:id="@+id/nama_posyandu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/nama_posyandu"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/alamat_posyandu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/alamat_posyandu"
                    android:textColor="#BDC3C7"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/nama_posyandu" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_jadwal"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/alamat_posyandu">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/jadwal_konsultasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="@string/jadwal_konsultasi_card_title"
                            android:textColor="#2980B9"
                            android:textSize="22sp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/jadwal_terdekat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/jadwal_konsultasi">

                            <ImageButton
                                android:id="@+id/kalender"
                                android:layout_width="53dp"
                                android:layout_height="53dp"
                                android:background="@null"
                                android:importantForAccessibility="no"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/baseline_calendar_today_24" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/text_jadwal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/kalender"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/kapan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/jadwal_konsultasi_card_subtitle"
                                    android:textColor="#2980B9"
                                    android:textSize="19sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tanggal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/kapan"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/jadwal_konsultasi_card_jadwal"
                                    android:textColor="#282828"
                                    android:textSize="17sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/kapan" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tanggal"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/jadwal_terakhir_jam"
                                    android:textColor="#282828"
                                    android:textSize="17sp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tanggal" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:text="@string/link_card"
                            android:textColor="#2980B9"
                            android:textSize="11sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/jadwal_terdekat" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <GridLayout
                    android:id="@+id/dua_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:alignmentMode="alignMargins"
                    android:clipChildren="false"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:rowCount="1"
                    app:layout_constraintTop_toBottomOf="@id/card_jadwal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/kader_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="10dp">

                        <androidx.cardview.widget.CardView
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:cardCornerRadius="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="14dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/card_kader_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toTopOf="@id/link_kader"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/gambar_kader"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toTopOf="@id/jumlah_kader"
                                        app:srcCompat="@drawable/kader"
                                        android:importantForAccessibility="no" />

                                    <TextView
                                        android:id="@+id/jumlah_kader"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:fontFamily="@font/inter_semibold"
                                        android:text="@string/kader_card_title"
                                        android:textColor="#2980B9"
                                        android:textSize="19sp"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintBottom_toTopOf="@id/terdaftar"
                                        app:layout_constraintTop_toBottomOf="@id/gambar_kader" />

                                    <TextView
                                        android:id="@+id/terdaftar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/inter"
                                        android:text="@string/kader_card_subtitle"
                                        android:textColor="#2980B9"
                                        android:textSize="17sp"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/jumlah_kader" />
                                </androidx.constraintlayout.widget.ConstraintLayout>


                                <TextView
                                    android:id="@+id/link_kader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/link_card"
                                    android:textColor="#2980B9"
                                    android:textSize="11sp"
                                    app:layout_constraintTop_toBottomOf="@id/card_kader_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/card_stunting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="10dp">

                        <androidx.cardview.widget.CardView
                            style="@style/Widget.Material3.CardView.Elevated"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:cardCornerRadius="12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/card_stunting_content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toTopOf="@id/card_stunting_link"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/card_stunting_icon"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toTopOf="@id/card_stunting_title"
                                        app:srcCompat="@drawable/warning_sign"
                                        android:importantForAccessibility="no" />

                                    <TextView
                                        android:id="@+id/card_stunting_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:fontFamily="@font/inter_semibold"
                                        android:text="Anda berisiko stunting"
                                        android:textColor="#FFCB05"
                                        android:textSize="19sp"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/card_stunting_icon" />

                                </androidx.constraintlayout.widget.ConstraintLayout>


                                <TextView
                                    android:id="@+id/card_stunting_link"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:fontFamily="@font/inter"
                                    android:text="@string/link_card"
                                    android:textColor="#2980B9"
                                    android:textSize="11sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </GridLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_remaja"
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/dua_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/jumlah_remaja"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="@string/card_remaja_title"
                            android:textColor="#2980B9"
                            android:textSize="22sp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/sebaran_remaja"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/jumlah_remaja">

                            <ImageButton
                                android:id="@+id/barchart"
                                android:layout_width="wrap_content"
                                android:layout_height="53dp"
                                android:background="@null"
                                android:contentDescription="@string/judul_chart_sebaran_remaja"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/barchart" />

                            <TextView
                                android:id="@+id/jumlah_risiko"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter"
                                android:text="@string/jumlah_remaja_risiko"
                                android:textColor="#FFCB05"
                                android:textSize="19sp"
                                app:layout_constraintLeft_toRightOf="@id/barchart"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/inter"
                            android:text="@string/link_card"
                            android:textColor="#2980B9"
                            android:textSize="11sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sebaran_remaja" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>